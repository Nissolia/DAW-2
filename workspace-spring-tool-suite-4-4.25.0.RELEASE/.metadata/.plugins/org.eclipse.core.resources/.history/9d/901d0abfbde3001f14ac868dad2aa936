myapp-mysql:
  image: mysql:8.0
  environment:
    - MYSQL_ROOT_PASSWORD=mysql
    - MYSQL_DATABASE=test
    - MYSQL_USER=root
    - MYSQL_PASSWORD=mysql
  ports:
    - 3306:3306
  volumes:
    - mysql_data:/var/lib/mysql
  networks:
    - employee-mysql
  healthcheck:
    test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
    interval: 10s
    retries: 5
    timeout: 5s
